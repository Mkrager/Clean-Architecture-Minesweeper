@using Minesweeper.App.ViewModels;
@model List<LeaderbordListViewModel>

<div class="leaderboard-container">
    <div class="leaderboard-title">Leaderboard</div>

    <a asp-controller="LeaderboardEntry" asp-action="ListByLevel" asp-route-gameLevel="Easy">Easy</a>
    <a asp-controller="LeaderboardEntry" asp-action="ListByLevel" asp-route-gameLevel="Medium">Medium</a>
    <a asp-controller="LeaderboardEntry" asp-action="ListByLevel" asp-route-gameLevel="Hard">Hard</a>

    <table class="leaderboard-table">
        <thead>
            <tr>
                <th>#</th>
                <th>Player</th>
                <th>Time</th>
                <th>Game level</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].PlayerName</td>
                        <td>@Model[i].Time.ToString(@"mm\:ss")</td>
                        <td>@Model[i].GameLevel.ToString()</td>
                    </tr>
            }
        </tbody>
    </table>

    <a asp-controller="Home" asp-action="Index" class="back-button">← Back to Game</a>
</div>